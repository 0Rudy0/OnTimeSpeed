
<div class="card" id="semiAutomaticEntry">
    <div data-bind="attr: {class : 'card-content ' + $data.styleClass + ' ' + $data.styleType + ' ' + $data.textClass + ' ' + $data.textType}">

        <div data-bind="template: { name: 'entry-template', data: $data }"></div>
        <div class="description">
            <label>Opis</label>
            <textarea data-bind="value: $data.description"></textarea>
        </div>
        <div class="activityButtons">
            <div class="row">
                <!-- ko if: $parent.userSettings().showLunch() -->
                <div class="col s6 m6 l6 xl4">
                    <a data-bind="click: addLunchSemi, attr: {class : 'waves-effect waves-light btn btn-large withIcon ' + $data.styleClass + ' ' + $data.buttonType}"
                       id="addLunchSemiBtn">
                        <i class="fad fa-utensils-alt"></i>
                        <span>Ručak</span>
                    </a>
                </div>
                <!-- /ko -->
                <!-- ko if: $parent.userSettings().showSickLeave() -->
                <div class="col s6 m6 l6 xl4">
                    <a data-bind="click: addSickLeave, attr: {class : 'waves-effect waves-light btn btn-large withIcon ' + $data.styleClass + ' ' + $data.buttonType}"
                       id="addLunchBtn">
                        <i class="fad fa-thermometer"></i>
                        <span>Bolovanje</span>
                    </a>
                </div>
                <!-- /ko -->
                <!-- ko if: $parent.userSettings().showInternalMeeting() -->
                <div class="col s6 m6 l6 xl4">
                    <a data-bind="click: addInternalMeeting, attr: {class : 'waves-effect waves-light btn btn-large withIcon ' + $data.styleClass + ' ' + $data.buttonType}"
                       id="addHolidaysButton">
                        <i class="fad fa-handshake-alt"></i>
                        <span>Interni sastanak</span>
                    </a>
                </div>
                <!-- /ko -->
                <!-- ko if: $parent.userSettings().showOnTime() -->
                <div class="col s6 m6 l6 xl4">
                    <a data-bind="click: addOnTimeEntry, attr: {class : 'waves-effect waves-light btn btn-large withIcon ' + $data.styleClass + ' ' + $data.buttonType}"
                       id="addVacationButton">
                        <i class="fad fa-user-clock"></i>
                        <span>OnTime unos sati</span>
                    </a>
                </div>
                <!-- /ko -->
                <!-- ko if: $parent.userSettings().showCollegueSupport() -->
                <div class="col s6 m6 l6 xl4">
                    <a data-bind="click: addColegueSupport, attr: {class : 'waves-effect waves-light btn btn-large withIcon ' + $data.styleClass + ' ' + $data.buttonType}"
                       id="addPaidLeaveButton">
                        <i class="fad fa-people-carry"></i>
                        <span>Podrška kolegi</span>
                    </a>
                </div>
                <!-- /ko -->
                <!-- ko if: $parent.userSettings().showEducation() -->
                <div class="col s6 m6 l6 xl4">
                    <a data-bind="click: addEducationButton, attr: {class : 'waves-effect waves-light btn btn-large withIcon ' + $data.styleClass + ' ' + $data.buttonType}"
                       id="addEducationButton">
                        <i class="fad fa-user-graduate"></i>
                        <span>Edukacija / školovanje</span>
                    </a>
                </div>
                <!-- /ko -->
            </div>
        </div>
    </div>
</div>
